<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/sneakers/forms.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/sneakers" method="POST">
    <label for="imageUrl-input">Image URL:</label>
    <input type="text" name="imageUrl" id="imageUrl-input" placeholder="Paste image address">
    <label for="brand-input">Brand:</label>
    <select name="brand" id="brand-input">
      <option value="adidas">Adidas</option>
      <option value="converse">Converse</option>
      <option value="jordan">Jordan</option>
      <option value="new_balance">New Balance</option>
      <option value="nike" selected>Nike</option>
      <option value="reebok">Reebok</option>
      <option value="vans">Vans</option>
      <option value="yeezy">Yeezy</option>
    </select>
    <label for="nickname-input">Nickname:</label>
    <input type="text" name="nickname" id="nickname-input" autocomplete="off" required>
    <label for="releaseYear-input">Release Year:</label>
    <input type="number" name="releaseYear" id="releaseYear-input" min="1900" max="2099" step="1" autocomplete="off" placeholder="YYYY">
    <label for="sku-input">SKU:</label>
    <input type="text" name="sku" id="sku-input" autocomplete="off">
    <label for="size-input">Size:</label>
    <input type="number" name="size" id="size-input" min="1" max="30" step="0.5">
    <label for="purchasePrice-input">Purchase Price:</label>
    <input type="number" name="purchasePrice" id="purchasePrice-input">
    <label for="for-sale-checkbox">Ready to sell or trade?</label>
    <input type="checkbox" name="isForSale" id="for-sale-checkbox">
    <button type="submit" id="btn">Add to Inventory</button>
  </form>
</main>


<%- include('../partials/footer') %>