<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<%- include('../partials/nav') %>

<main>
  <div>
    <img 
      class="profile-avatar"
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %>'s avatar"
    >
  </div>
  <h1><%= profile.name %>'s Sneaker Inventory</h1>
  <div class="sneaker-container">
    <% sneakers.forEach(sneaker => { %>
      <div class="sneaker-card">
        <a href="/sneakers/<%= sneaker._id %>"><img src="<%= sneaker.imageUrl %>" alt="sneakers" height="200px" width="auto"></a>
        

      </div>
    <% }) %>

  </div>
  </main>

<%- include('../partials/footer') %>