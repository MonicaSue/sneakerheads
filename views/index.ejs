<%- include('./partials/html-head') %>
<% if (user) { %>
  <%- include('./partials/nav') %>
<% } %>

  <% if (user) { %>
    <div id="grid-container"> 
      <div id="landing-logo">
        <h3>icon</h3>
        <h3>SNEAKERHEADS</h3>
        <p></p>
      </div>
      <div id="landing-imageOne">
        <img src="/assets/images/landing_page_images/model.jpeg" alt="sneaker-model">
      </div>
      <div id="landing-imageTwo">
        <img src="/assets/images/landing_page_images/sneakers.jpeg" alt="sneakers">
      </div>
      <div id="landing-content">
        page content
      </div>
    </div>
  <% } else { %>
    <div id="log-in">
      <h1>
        <span data-text="S">S</span>
        <span data-text="N">N</span>
        <span data-text="E">E</span>
        <span data-text="A">A</span>
        <span data-text="K">K</span>
        <span data-text="E">E</span>
        <span data-text="R">R</span>
        <span data-text="H">H</span>
        <span data-text="E">E</span>
        <span data-text="A">A</span>
        <span data-text="D">D</span>
        <span data-text="S">S</span>
      </h1>
      <div id="google-login">
        <script defer src="https://accounts.google.com/gsi/client"></script>
        <div 
          id="g_id_onload"
          data-client_id="<%= googleClientID %>"
          data-login_uri="/auth/google"
          data-auto_prompt="false"
        ></div>
        <div 
          class="g_id_signin"
          data-type="standard"
          data-size="large"
          data-theme="outline"
          data-text="sign_in_with"
          data-shape="circle"
          data-logo_alignment="left"
        ></div>
      </div>
      <div class="feature-container">
        <div class="full-background-color">  
          <div class="feature-content">  
            <div class="inventory">
              <h4>Inventory<br>Management</h4><br><img src="../assets/images/landing_page_images/sneaker-icon.png" alt="sneaker-icon"><br><p>Track & manage<br>your collection</p>
            </div>
            <div class="community">
              <h4>Community</h4><br><img src="../assets/images/landing_page_images/community-icon.png" alt="community-icon"><br><p>Connect with the<br>sneaker culture</p>
            </div>
            <div class="marketplace">
              <h4>Marketplace</h4><br><img src="../assets/images/landing_page_images/marketplace-icon.png" alt="marketplace-icon"><br><p>Buy・Sell・Trade</p>
            </div>
          </div>
        </div>  
      </div>
    </div>
  <% } %>

<%- include('./partials/footer') %>
