<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/sneakers/forms.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="edit-form" action="/sneakers/<%= sneaker._id %>?_method=PUT" method="POST">
    <label for="imageUrl-input">Image URL:</label>
    <input type="text" name="imageUrl" value="<%= sneaker.imageUrl %>" id="imageUrl-input">
    <label for="brand-input">Brand:</label>
    <select name="brand" id="brand-input">
      <option value="<%= sneaker.brand %>"><%= sneaker.brand %></option>
      <option value="adidas">Adidas</option>
      <option value="converse">Converse</option>
      <option value="jordan">Jordan</option>
      <option value="new_balance">New Balance</option>
      <option value="nike">Nike</option>
      <option value="reebok">Reebok</option>
      <option value="vans">Vans</option>
      <option value="yeezy">Yeezy</option>
    </select> 
    <label for="nickname-input">Nickname:</label>
    <input type="text" name="nickname" value="<%= sneaker.nickname %>" id="nickname-input">
    <label for="releaseYear-input">Release Year:</label>
    <input type="number" name="releaseYear" value="<%= sneaker.releaseYear %>" id="releaseYear-input" min="1900" max="2099" step="1" autocomplete="off" placeholder="YYYY">
    <label for="sku-input">SKU:</label>
    <input type="text" name="sku" value="<%= sneaker.sku %>" id="sku-input">
    <label for="size-input">Size:</label>
    <input type="number" name="size" value="<%= sneaker.size %>" id="size-input" min="1" max="30" step="0.5">
    <label for="purchasePrice-input">Purchase Price:</label>
    <input type="number" name="purchasePrice" value="<%= sneaker.purchasePrice %>" id="purchasePrice-input">
    <label for="for-sale-checkbox">Ready to sell or trade?</label>
    <input 
      type="checkbox" 
      name="isForSale" 
      id="for-sale-checkbox" 
      <%= sneaker.isForSale ? "checked" : "" %>
      >
    <button type="submit" id="btn">Update</button>
  </form>
</main>


<%- include('../partials/footer') %>